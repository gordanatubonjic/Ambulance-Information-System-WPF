<UserControl x:Class="AmbulanceWPF.Views.UserControls.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

             xmlns:local="clr-namespace:AmbulanceWPF.Views.UserControls"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid Background="White">
        <TextBox x:Name="txtInput" VerticalContentAlignment="Center" FontSize="16" FontWeight="Light" Background="Transparent"
                 
                 Text="{Binding SearchText, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        />
        <TextBlock x:Name="tbPlaceholder"  Text="Search. . . " FontSize="20" FontWeight="Light" Foreground="DarkGray" 
                   VerticalAlignment="Center" Margin="5,0,0,0" Panel.ZIndex="-1"
                   Visibility="{Binding TextPlaceholderVisibility, ElementName=root}">
            <materialDesign:PackIcon Kind="AccountSearchOutline" Height="23" Width="23" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </TextBlock>

        <Button x:Name="btnSearch" Width="30" HorizontalAlignment="Right" BorderThickness="0"
              Command="{Binding SearchCommand, ElementName=root}" RenderTransformOrigin="0.149,0.54"
                  Margin="265,4,0,4">
            <Button.Content>
                <materialDesign:PackIcon Kind="Magnify" HorizontalAlignment="Center" Width="23" Height="23" />
            </Button.Content>
        </Button>



    </Grid>
</UserControl>
