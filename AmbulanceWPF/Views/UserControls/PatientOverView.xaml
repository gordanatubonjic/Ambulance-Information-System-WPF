<UserControl x:Class="AmbulanceWPF.Views.UserControls.PatientOverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AmbulanceWPF.Views.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:AmbulanceWPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:DoctorHomePageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16">
            <TextBox x:Name="SearchTextBox"
                Margin="16"
                materialDesign:HintAssist.Hint="{DynamicResource SearchText}"
                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                FontSize="14"/>
        </materialDesign:Card>

        <StackPanel Grid.Row="1" 
               Orientation="Horizontal" 
               HorizontalAlignment="Center"
               Margin="0,0,0,16">
            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                Background="Bisque"
                    Foreground="Azure"
                Width="56" Height="56"
                Margin="8"
                ToolTip="{DynamicResource NewExamText}"
                Command="{Binding NewExamCommand}">
                <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
            </Button>

            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                Width="56" Height="56"
                Margin="8"
                ToolTip="{DynamicResource NewInterventionText}"
                Command="{Binding NewInterventionCommand}">
                <materialDesign:PackIcon Kind="MedicalBag" Width="24" Height="24"/>
            </Button>

            <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                Width="56" Height="56"
                Margin="8"
                ToolTip="{DynamicResource MonthlyReportText}"
                Command="{Binding MonthlyReportCommand}">
                <materialDesign:PackIcon Kind="ChartBar" Width="24" Height="24"/>
            </Button>
        </StackPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilteredPatients}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <local:PatientSummary/>
                            <Button Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding DataContext.MedicalRecordDisplayCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            ToolTip="Click to view patient examination details"
                            Margin="10,0,0,0"
                            Padding="10">
                                <!-- Add an icon for better UX -->
                                <materialDesign:PackIcon Kind="Stethoscope" 
                                                Width="20" 
                                                Height="20"/>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>