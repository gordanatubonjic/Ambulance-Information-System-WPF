<Window x:Class="AmbulanceWPF.Views.PatientHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmbulanceWPF.Views"
        xmlns:userControls="clr-namespace:AmbulanceWPF.Views.UserControls" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="PatientHistoryView" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="78"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>

        </Grid.RowDefinitions>
        <userControls:AppHeader Grid.Row="0" Margin="0,9,0,9"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <materialDesign:PackIcon Grid.Column="0"  Kind="Account" Foreground="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Center" Height="119" VerticalAlignment="Center" Width="160" />
            <userControls:PatientSummary Grid.Column="1" />
        </Grid>
        <Grid Grid.Row="2">
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="16,8,16,16">
                <ItemsControl ItemsSource="{Binding History.Diagnosis}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0,0,0,12" 
                                       materialDesign:RippleAssist.Feedback="{DynamicResource MaterialDesignBody}">
                                <Grid Margin="16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Grid.Row="0" Grid.Column="0" 
                                                   Kind="CalendarCheck" 
                                                   Width="24" Height="24" 
                                                   Foreground="{DynamicResource MaterialDesignPrimary}"
                                                   VerticalAlignment="Top" 
                                                   Margin="0,2,12,0"/>

                                                                         <TextBlock Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding CheckupDate, StringFormat='MMM dd, yyyy'}" 
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     Margin="0,0,0,8"/>

                                                                         <TextBlock Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding DoctorName}" 
                                     Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding Summary}" 
                                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                                     TextWrapping="Wrap"
                                     MaxHeight="60"
                                     Margin="0,0,0,12"/>

                                                                         <Grid Grid.Row="3" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                                                                 <materialDesign:Chip Grid.Column="0" 
                                                   Content="{Binding CheckupType}" 
                                                   HorizontalAlignment="Left"
                                                   IsEnabled="False"
                                                   Background="{DynamicResource MaterialDesignChipBackground}"/>
                                    </Grid>

                                                                         <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="4"
                                  Style="{StaticResource MaterialDesignIconForegroundButton}"
                                  ToolTip="View detailed report"
                                  Command="{Binding DataContext.ShowDetailedReportCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                  CommandParameter="{Binding}"
                                  VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="OpenInNew" 
                                                       Width="20" Height="20"/>
                                    </Button>

                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Button Grid.Row="3" Background="#14990B" Height="30" Width="150" HorizontalAlignment="Right" Margin="0,0,60,0" >
            <materialDesign:PackIcon Height="20" Width="20" x:Name="packIcon" Kind="Add" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        </Button>

    </Grid>
</Window>
