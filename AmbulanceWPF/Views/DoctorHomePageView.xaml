<Window x:Class="AmbulanceWPF.Views.DoctorHomePageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:userControls="clr-namespace:AmbulanceWPF.Views.UserControls" 
        xmlns:viewmodels="clr-namespace:AmbulanceWPF.ViewModels"
        mc:Ignorable="d"
        Title="Employee Home Page" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <userControls:AppHeader Grid.Row="0" Grid.ColumnSpan="2" Margin="0,9,0,9"
                HomeCommand="{Binding HeaderHomeCommand}"
                LogoutCommand="{Binding HeaderLogoutCommand}"
                ThemeCommand="{Binding HeaderThemeCommand}"
                ViewProfileCommand="{Binding HeaderViewProfileCommand}"
                DoctorName="{Binding DoctorName}"
                DoctorInitials="{Binding DoctorInitials}"
                DoctorEmail="{Binding DoctorEmail}"
                DoctorRole="{Binding DoctorRole}"/>

        <materialDesign:Card Grid.Row="1" Grid.Column="0" 
                           Margin="16" 
                           VerticalAlignment="Stretch"
                           Background="{DynamicResource MaterialDesignCardBackground}">
            <StackPanel Margin="16">
                <TextBlock Text="{DynamicResource NavigationText}" 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          Margin="0,0,0,20"/>

                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Content="{DynamicResource MyInterventionsText}"
                        HorizontalContentAlignment="Left"
                        Margin="0,0,0,10"
                        FontSize="14"
                        Command="{Binding NavigateToInterventionsCommand}"/>

                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Content="{DynamicResource PatientsText}"
                        HorizontalContentAlignment="Left"
                        Margin="0,0,0,10"
                        FontSize="14"
                        Command="{Binding NavigateToPatientsCommand}"/>

                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Content="{DynamicResource MyProfileText}"
                        HorizontalContentAlignment="Left"
                        Margin="0,0,0,10"
                        FontSize="14"
                        Command="{Binding NavigateToProfileCommand}"/>
            </StackPanel>
        </materialDesign:Card>

                 <ContentControl Grid.Row="1" Grid.Column="1" 
                       Content="{Binding CurrentContentView}"
                       Margin="16"/>
    </Grid>
</Window>